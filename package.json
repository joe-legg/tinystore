{
  "name": "@joelegg/tinystore",
  "version": "0.2.0",
  "description": "Tiny state manager for preact",
  "main": "dist/tinystore.js",
  "types": "dist/tinystore.d.ts",
  "scripts": {
    "build": "tsc",
    "format": "prettier --parser typescript --write \"tinystore.ts\"",
    "size": "npm run build && size-limit",
    "prepare": "npm run build"
  },
  "author": "Joe Legg",
  "license": "MIT",
  "peerDependencies": {
    "preact": "^10.9.0"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^7.0.8",
    "prettier": "^2.7.1",
    "size-limit": "^7.0.8",
    "typescript": "^4.7.4"
  },
  "size-limit": [
    {
      "path": "dist/tinystore.js"
    }
  ]
}
