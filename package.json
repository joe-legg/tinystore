{
  "name": "tinystore",
  "version": "0.1.0",
  "description": "Tiny state manager for preact",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc --outDir dist/",
    "format": "prettier --write \"**/*.+(js|ts)\"",
    "size": "npm run build && size-limit",
    "prepare": "npm run build"
  },
  "author": "Joe Legg",
  "license": "MIT",
  "devDependencies": {
    "@size-limit/preset-small-lib": "^7.0.8",
    "prettier": "^2.7.1",
    "size-limit": "^7.0.8",
    "typescript": "^4.7.4"
  },
  "size-limit": [
    {
      "path": "index.js"
    }
  ]
}
